@{
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

@section Scripts{
    @Scripts.Render("~/bundles/opinion")
}

<div class="row" id="tablaOpinion">
    <div class="col-md-12">
        <div class="col-md-4s">
            <h2>Agregar</h2>
            <form class="form-inline" data-bind="submit: agregarOpinion">
                <div class="form-group col-md-7">
                    <label for="inputName" class="control-label">Nombre</label>
                    <input name="inputName" class="form-control" type="text" data-bind="value: opinionNueva.Nombre"/>

                    <button class="btn btn-success col-md-7">REGISTRAR</button>
                </div>
            </form>
        </div>



        <div class="row">
            <div class="col-md-6">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: opinions">
                        <tr>
                            <td data-bind="text: OpinionId"></td>
                            <td data-bind="text: Nombre"></td>

                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-warning " data-bind="click: $root.cargarOpinion" onclick="OpinionCliente.mostrarForm()" ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                    <button class="btn btn-danger " data-bind="click: $root.eliminarOpinion"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <div data-bind="if: opinionCargada" id="formularioOpinion">
            <h2>Formulario Editar</h2>
            <form class="form-horizontal" data-bind="submit: editarOpinion">
                <div class="form-group">
                    
                    <input name="inputId" type="hidden" class="form-control" data-bind="value: opinionCargada().OpinionId"/>

                </div>


                <div class="form-group">
                    <label for="inputname" class="control-label">Nombre</label>
                    <input name="inputname" type="text" class="form-control" data-bind="value: opinionCargada().Nombre" />

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success" onclick="EditTabla.mostrarForm()">Editar</button>
                </div>
            </form>
        </div>
    </div>
</div>

